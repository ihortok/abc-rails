<section class="fade-in">
  <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <div>
      <h2 class="text-4xl font-semibold"><%= @alphabet.name %></h2>
    </div>
    <%= link_to "Back to Alphabets", alphabets_path, class: "rounded-full border border-white/70 bg-white/90 px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:border-gray-300" %>
  </div>

  <div class="mt-8 grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
    <% @alphabet.letters.each do |letter| %>
      <div class="rounded-3xl border border-white/70 bg-white/90 p-4 text-center card-pop">
        <div class="mx-auto mb-3 flex h-14 w-14 items-center justify-center rounded-2xl bg-amber-100 text-2xl font-semibold text-amber-700">
          <%= letter.character.upcase %>
        </div>
        <div class="flex items-center justify-center gap-2">
          <%= link_to alphabet_letter_path(@alphabet, letter), class: "inline-flex items-center justify-center rounded-full border border-gray-200 bg-white px-2 py-1 text-sm font-semibold text-gray-600 hover:text-gray-900" do %>
            <i class="fa-solid fa-eye" aria-hidden="true"></i>
            <span class="sr-only">Open</span>
          <% end %>
          <% if letter.sound.attached? %>
            <div class="">
              <button
                type="button"
                class="inline-flex items-center rounded-full border border-gray-200 bg-white px-2 py-1 text-xs font-semibold text-gray-600 hover:text-gray-900"
                data-audio-id="letter-audio-<%= letter.id %>"
              >
                <i class="fa-solid fa-volume-high" aria-hidden="true"></i>
                <span class="sr-only">Listen</span>
              </button>
              <audio id="letter-audio-<%= letter.id %>" src="<%= url_for(letter.sound) %>" class="hidden"></audio>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
  (() => {
    document.querySelectorAll("[data-audio-id]").forEach((button) => {
      button.addEventListener("click", () => {
        const audio = document.getElementById(button.dataset.audioId);
        if (audio) audio.play();
      });
    });
  })();
</script>
