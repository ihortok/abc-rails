<h1 class="text-2xl font-semibold mb-6">Words</h1>

<table class="min-w-full divide-y divide-gray-200 border border-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Word</th>
      <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Image</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200 bg-white">
    <% @words.each do |word| %>
      <tr>
        <td class="px-4 py-3 text-sm text-gray-900"><%= word.content %></td>
        <td class="px-4 py-3">
          <% if word.image.attached? %>
            <%= image_tag word.image, alt: word.content, class: "h-12 w-12 object-contain" %>
          <% else %>
            <span class="text-sm text-gray-400">â€”</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
