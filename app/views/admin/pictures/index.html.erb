<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Pictures</h1>
  <%= link_to "New picture", new_admin_picture_path, class: "inline-flex items-center rounded bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-gray-800" %>
</div>

<table class="min-w-full divide-y divide-gray-200 border border-gray-200">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Title</th>
      <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Image</th>
      <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200 bg-white">
    <% @pictures.each do |picture| %>
      <tr>
        <td class="px-4 py-3 text-sm text-gray-900"><%= picture.title %></td>
        <td class="px-4 py-3">
          <% if picture.picture_file.attached? %>
            <%= image_tag picture.picture_file, alt: picture.title, class: "h-12 w-12 object-contain" %>
          <% else %>
            <span class="text-sm text-gray-400">â€”</span>
          <% end %>
        </td>
        <td class="px-4 py-3 text-sm">
          <%= link_to "Delete", admin_picture_path(picture), data: { turbo_method: :delete, turbo_confirm: "Delete this picture?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
